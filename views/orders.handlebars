<link rel="stylesheet" href="orders_style.css" type="text/css">

<div class="orders">
    <div class="panel panel-default">
        <div class="panel-body">
            <table class="table ordersTable">
                <thead>
                <tr>
                    <th>id</th>
                    <th>status</th>
                    <th>trade_url</th>
                    <th>vendor</th>
                    <th>date</th>
                    <th>info</th>
                </tr>
                </thead>
                <tbody>
                <div class="form-inline">
                        <select class="form-control selectedStatus">
                            <option value="default">default</option>
                            {{#each statuses}}
                                <option value="{{ status }}">{{ status }}</option>
                            {{/each}}
                        </select>
                    <button type="button" class="btn btn-default" id="getOrders">Search</button>
                </div>
                {{#each orders}}
                    <tr class={{#equal status "done"}}"bg-success"{{/equal}}{{#equal status "process"}}
                        "bg-warning"{{/equal}}"bg-danger">
                    <td>{{id}}</td>
                    <td>{{status}}</td>
                    <td>{{trade_url}}</td>
                    <td>{{vendors}}</td>
                    <td>{{dateFormat created_at "Y-MM-DD HH:mm:ss"}}</td>
                    <td><a class="btn btn-default" href="{{../client}}/orders/{{id}}" role="button">Info</a></td>
                    </tr>
                {{/each}}
                </tbody>

                <nav aria-label="page navigation">
                    <ul class="pagination">
                        {{#paginate pagination type="first"}}
                            <li class="page-item">
                                <a class="page-link" href="page={{n}}" aria-label="First">
                                    <span aria-hidden="true">&laquo;</span>
                                    <span class="sr-only">First</span>
                                </a>
                            </li>
                        {{/paginate}}
                        {{#paginate pagination type="previous"}}
                            <li class="page-item">
                                <a class="page-link" href="page={{n}}" aria-label="Previous">
                                    <span aria-hidden="true">&lsaquo;</span>
                                    <span class="sr-only">Previous</span>
                                </a>
                            </li>
                        {{/paginate}}
                        {{#paginate pagination type="middle" limit="10"}}
                            <li class="page-item"><a class="page-link" href="page={{n}}">{{n}}</a></li>
                        {{/paginate}}
                        {{#paginate pagination type="next"}}
                            <li class="page-item">
                                <a class="page-link" href="page={{n}}" aria-label="Next">
                                    <span aria-hidden="true">&rsaquo;</span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </li>
                        {{/paginate}}
                        {{#paginate pagination type="last"}}
                            <li class="page-item">
                                <a class="page-link" href="page={{n}}" aria-label="Last">
                                    <span aria-hidden="true">&raquo;</span>
                                    <span class="sr-only">Last</span>
                                </a>
                            </li>
                        {{/paginate}}
                    </ul>
                </nav>
            </table>
        </div>
    </div>
</div>
<script src="/js/orders.js"></script>
