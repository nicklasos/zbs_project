<link rel="stylesheet" href="/styles/order_info_style.css" type="text/css">

<div class="orders">
    <a class="btn btn-default" href="/clients/{{client}}" role="button" id="back-button">Back</a>
    <br>
    <div class="panel panel-default">
        <div class="panel-body">
            <table class="table" id="orders">
                <thead>
                <tr>
                    <th>id</th>
                    <th>hash</th>
                    <th>status</th>
                </tr>
                </thead>
                <tbody>
                {{#each orderItems}}
                    <tr>
                        <td>{{id}}</td>
                        <td>{{hash}}</td>
                        <td class="data_color">
                            <div class="progress">
                                <div class="progress-bar" role="progressbar" aria-valuenow="10"
                                     aria-valuemin="0" aria-valuemax="100" style="width:40%; background: yellow"
                                     data-status="{{status}}">
                                </div>
                            </div>
                        </td>
                    </tr>
                    <tr class="logsInside">
                        <td colspan="3">
                            <table class="table">
                                Logs
                                <thead>
                                <tr>
                                    <th>Module</th>
                                    <th>Status</th>
                                    <th>Comment</th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    <td></td>
                                    <td></td>
                                    <td></td>
                                </tr>
                                </tbody>
                            </table>
                        </td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>
<script src="/js/order_table.js"></script>
